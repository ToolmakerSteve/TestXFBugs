<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="TestXFUWP.PageWithQueryData" BackgroundColor="LightGreen">
    <ContentPage.Content>
        <StackLayout BackgroundColor="Blue">
            <!--VerticalOptions="CenterAndExpand" HorizontalOptions="CenterAndExpand"-->
            <CollectionView ItemsSource="{Binding Items}" BackgroundColor="Violet">
                <CollectionView.ItemTemplate>
                    <DataTemplate>
                        <StackLayout BackgroundColor="Gray">
                            <Label Text="{Binding Name}" BackgroundColor="Coral" />
                        </StackLayout>
                    </DataTemplate>
                </CollectionView.ItemTemplate>
                <CollectionView.EmptyView>
                    <Grid>
                        <Label Text="Loading ..." FontSize="24" TextColor="Blue" BackgroundColor="LightBlue" HorizontalTextAlignment="Center" VerticalTextAlignment="Center" />
                    </Grid>
                </CollectionView.EmptyView>
            </CollectionView>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>